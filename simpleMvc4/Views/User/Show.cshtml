@model simpleMvc4.Dto.UserRespone

@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Show</h2>

<div>
    <h4>UserRespone</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.passcode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.passcode)
        </dd>

    </dl>

    <h4>@Html.DisplayNameFor(model => model.Roles)</h4>
    <hr />
    <dl class="dl-horizontal">
        @{
            if (Model.Roles != null)
            {
                foreach (var role in Model.Roles)
                {
                    <dd>
                        @role.roleName
                    </dd>
                }
            }
            else
            {
                <dd>No have Roles!</dd>
            }
        }
    </dl>
    <h4>@Html.DisplayNameFor(model => model.Books)</h4>
    <hr />
    <dl class="dl-horizontal">
        @{
            if (Model.Books != null)
            {
                foreach (var books in Model.Books)
                {
                    <dt>
                        Book Title
                    </dt>
                    <dd>
                        @books.bookTitle
                    </dd>
                    <dt>
                        Book Author
                    </dt>
                    <dd>
                        @books.author
                    </dd>
                }
}
            else
            {
                <dd>No have books!</dd>
            }
        }
    </dl>
</div>
